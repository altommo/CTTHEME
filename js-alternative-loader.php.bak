<?php
// TEMPORARY: Alternative JS loading function
// Add this to functions.php if the main one fails

function customtube_load_js_alternative() {
    // Try different approaches
    $js_files = array(
        get_template_directory_uri() . '/dist/js/customtube.min.js',
        get_template_directory_uri() . '/dist/js/customtube.js',
        get_template_directory_uri() . '/js/customtube.min.js',
        get_template_directory_uri() . '/js/main.js'
    );
    
    foreach ($js_files as $index => $js_url) {
        $js_path = str_replace(get_template_directory_uri(), get_template_directory(), $js_url);
        
        if (file_exists($js_path)) {
            wp_enqueue_script(
                'customtube-alt-' . $index,
                $js_url,
                array('jquery'),
                time(), // Force no cache
                true
            );
            
            wp_add_inline_script(
                'customtube-alt-' . $index,
                'console.log("âœ… Loaded alternative JS: ' . $js_url . '");',
                'before'
            );
            break;
        }
    }
}

